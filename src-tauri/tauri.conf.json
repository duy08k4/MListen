{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mlisten",
  "version": "0.1.0",
  "identifier": "com.mlisten.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MListen",
        "minWidth": 1500,
        "minHeight": 800
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": {
        "default-src": "'self'",
        "style-src": "'self' http://ipc.localhost https://cdnjs.cloudflare.com",
        "connect-src": "'self' http://ipc.localhost https://api.dictionaryapi.dev",
        "media-src": "'self' https://api.dictionaryapi.dev"
      },
      "headers": {
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization",
        "Access-Control-Expose-Headers": "X-Custom-Header"
      }
    }
  },
  "plugins": {
    "fs": {},
    "permissions": [
      "default"
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/LogoApp.png",
      "icons/LogoApp.ico"
    ]
  }
}